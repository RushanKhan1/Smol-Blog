<form action="/edit" method="post">

    <h1><textarea  rows="1" cols="33" name="title" required><%=docs[0].title%></textarea></h1>
    <textarea class="post"  rows="10" cols="63"  name="body" required><%=docs[0].body%></textarea> <br><br> 
    <input type="hidden" name="id"  value="<%=docs[0]._id%>">
